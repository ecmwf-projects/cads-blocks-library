{
  "name": "@ecmwf-projects/cads-blocks-library",
  "description": "CADS Blocks library for webportal",
  "private": false,
  "version": "0.2.0",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git@github.com:ecmwf-projects/cads-blocks-library.git"
  },
  "bugs": {
    "url": "git@github.com:ecmwf-projects/cads-blocks-library/issues"
  },
  "homepage": "git@github.com:ecmwf-projects/cads-blocks-library#README",
  "license": "Apache-2.0",
  "main": "./dist/cads-blocks-library.umd.js",
  "module": "./dist/cads-blocks-library.es.js",
  "exports": {
    ".": {
      "import": "./dist/cads-blocks-library.es.js",
      "require": "./dist/cads-blocks-library.umd.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "lint:fix": "eslint --fix 'src/**/*.{jsx,ts,tsx}'",
    "format": "prettier --write src//**/*.{ts,tsx,css} --config ./.prettierrc",
    "preview": "vite preview",
    "prepare": "husky install",
    "lint-staged": "npm run lint && npm run format",
    "test": "jest",
    "postversion": "git push --follow-tags"
  },
  "dependencies": {
    "lodash.chunk": "^4.2.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-react": "^7.22.5",
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.3",
    "@types/lodash.chunk": "^4.2.7",
    "@types/node": "^20.4.2",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "@types/styled-components": "^5.1.26",
    "@types/testing-library__jest-dom": "^5.14.8",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "@vitejs/plugin-react": "^4.0.1",
    "babel-jest": "^29.6.1",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.1",
    "husky": "^8.0.3",
    "jest": "^29.6.1",
    "jest-environment-jsdom": "^29.6.1",
    "json": "^11.0.0",
    "prettier": "^3.0.0",
    "react-test-renderer": "^18.2.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.0.2",
    "vite": "^4.4.0",
    "vite-plugin-dts": "^1.0.5",
    "vite-plugin-linter": "^2.0.2"
  },
  "peerDependencies": {
    "@ecmwf-projects/cads-ui-library": "^6.1.16",
    "next": "^13.4.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "styled-components": "^5.3.11"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
